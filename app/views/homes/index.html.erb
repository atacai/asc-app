<div class="row mt-5 mb-5">
	<div class="col-md-10 ml-auto mr-auto">
		<div class="card">
    <%= form_tag (search_path), method: :get do %>
			<div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <%= label_tag :name %>
              <%= text_field_tag :name, "", class: "form-control", placeholder: "Name ..." %>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <%= label_tag :price %>
              <%= number_field_tag :price, "", class: "form-control", placeholder: "Price ..." %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <%= label_tag :address %>
              <%= text_field_tag :address, "", class: "form-control", placeholder: "Address ..." %>
            </div>
          </div>
          <div class="col-md-1">
            <div class="form-group">
              <%= label_tag :stars %>
              <%#= select_tag %>
              <select id="stars" class="form-control">
                <option value=""></option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
              </select>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <label for="rating">Rating</label>
              <input type="number" class="form-control" id="rating" placeholder="Rating ..."/>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2 ml-auto text-right">
            <%= hidden_field_tag :lang, (!params['lang'].blank? ? params['lang'] : 'en') %>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
			</div>
    <% end %>
    </div>
  </div>
</div>